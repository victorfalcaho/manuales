<%- include('../partials/header.ejs'); %>

<div class="row mt-4">
    <div class="col-4"></div>
    <div class="col-4">
        <a href="/agregar-usuario" class="btn btn-primary btn-block">Agregar usuario</a>
    </div>
    <div class="col-4"></div>
</div>

<div class="row mt-3">
    <div class="col-12">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellidos</th>
                    <th scope="col">Foto</th>
                    <th scope="col">Sexo</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                </tr>
            </thead>
            <tbody>
                <% for(let usuario  of resul){ %>
                <tr>
                    <th scope="row"><%= usuario.nombre %></th>
                    <td><%= usuario.apellidos %></td>
                    <td><%= usuario.foto %></td>
                    <td><%= usuario.sexo %></td>
                    <td>
                        <a href="/editar-usuario/<%= usuario.id %>" class="btn btn-success">Editar usuario</a>
                    </td>
                    <td>
                        <form action="/eliminar-usuario" method="POST">
                            <input type="hidden" name="id" value="<%= usuario.id %>">
                            <button class="btn btn-danger" type="submit">Eliminar</button>
                        </form>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div>



<%- include('../partials/footer.ejs'); %>