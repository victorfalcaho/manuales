<%- include('../partials/header.ejs'); %>

<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <form action="/editar-usuario" method="POST">
            <h1 class="my-4">Editar nuevo usuario</h1>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" class="form-control" name="nombre" value="<%= resul.nombre %>">
            </div>
            <div class="form-group">
                <label for="apellidos">Apellidos</label>
                <input type="text" class="form-control" name="apellidos" value="<%= resul.apellidos %>">
            </div>
            <div class="form-group">
                <label for="foto">Foto</label>
                <input type="text" class="form-control" name="foto" value="<%= resul.foto %>">
            </div>
            <div class="form-group">
                <label for="sexo">Sexo</label>
                <select name="sexo" id="sexo" class="form-control">
                    <option value="<%= resul.sexo %>"><%= resul.sexo %></option>
                    <option value="hombre">Hombre</option>
                    <option value="mujer">Mujer</option>
                </select>
            </div>
            <input type="hidden" value="<%= resul.id %>" name="id">
            <button class="btn btn-primary btn-block" type="submit">Editar</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>



<%- include('../partials/footer.ejs'); %>